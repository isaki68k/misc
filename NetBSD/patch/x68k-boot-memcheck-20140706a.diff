+static u_int
+checkmemsize(void)
+{
+	u_int m;
+
+#define	MIN_MB	4
+#define	MAX_MB	12
+
+	for (m = MIN_MB; m <= MAX_MB; m++) {
+		if (badbaddr((void *)(m * 1024 * 1024 - 1))) {
+			/* no memory */
+			break;
+		}
+	} 
+
+	return (m - 1) * 1024 * 1024;
+}
 
